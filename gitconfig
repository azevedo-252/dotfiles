[init]
  templatedir = ~/.git_template
[user]
  name = Bruno Azevedo
  email = azevedo.252@gmail.com
[alias]
  lol = log --graph --decorate --pretty=oneline --abbrev-commit --all
  lg = log --color --graph --date=short --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(blue)[%an]%Creset' --abbrev-commit
  conflicts = diff --name-only --diff-filter=U
  delete-branch = !sh -c 'git push origin :refs/heads/$1 && git branch -D $1' -
  s = status
  co = checkout
  b = branch
  ca = commit --amend
  ci = commit -v
  rso = remote show origin
  d = diff
  p = push
  r = rebase
  ri = rebase -i
  rc = rebase --continue
  ra = rebase --abort
  f = fetch
  a = add
  aa = add -A
  sta = stash
  stp = stash pop
  up = !git fetch && git rebase
  m = merge
[color]
  ui = true
[core]
  editor = vim
  excludesfile = ~/.gitignore
[push]
  default = current
[fetch]
  prune = true
[status]
  short = 1
